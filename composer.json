{
  "name": "wumvi/utils.sign",
  "authors": [
    {
      "name": "Private Person",
      "email": "vk@wumvi.com"
    }
  ],
  "require": {
    "php": "^8.0"
  },
  "archive": {
    "exclude": ["phpunit", "phpunit.xml", "ruleset.xml"]
  },
  "require-dev": {
    "phpunit/phpunit": "9.5.5",
    "overtrue/phplint": "8.0.x-dev",
    "phan/phan": "4.0.6"
  },
  "autoload": {
    "psr-4": {
      "Wumvi\\Utils\\": "src"
    }
  },
  "scripts": {
    "phpstan": [
      "phpstan analyze --level=7 src -c phpstan.neon"
    ],
    "phpunit": [
      "phpunit"
    ],
    "phplint": [
      "phplint"
    ],
    "phpcs": [
      "phpcs src --parallel=10 --runtime-set php_version 74000 -p --standard=ruleset.xml"
    ],
    "test": [
      "@phpstan",
      "@phpunit",
      "@phplint",
      "@phpcs"
    ]
  },
  "license": "proprietary"
}
